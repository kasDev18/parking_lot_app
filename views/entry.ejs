<% layout('layouts/boilerplate')%>

<div class="entry">
    <div class="col-md d-flex">
        <div class="px-2 pt-1 col" id="logo">
            <a href="/"><img class="bg-light border rounded img-fluid" src="images/app_logo.png" alt="" height="70" width="70"></a>
        </div>
    </div>
    <div class="col text-center mt-5">
        <h1 class="text">State your entry point</h1>
        <ul class="pt-5 list-unstyled btn-entry" style="height: 50vh;"> 
            <li class="my-3"><button data-id="1" class="btn btn-outline-warning btn-lg col-6 border rounded-pill" type="button" data-bs-toggle="button" aria-pressed="false"><span id="be-1"></span> Entry 1</button></li>
            <li class="my-3"><button data-id="2" class="btn btn-outline-warning btn-lg col-6 border rounded-pill" type="button" data-bs-toggle="button" aria-pressed="false"><span id="be-2"></span> Entry 2</button></li>
            <li class="my-3"><button data-id="3" class="btn btn-outline-warning btn-lg col-6 border rounded-pill" type="button" data-bs-toggle="button" aria-pressed="false"><span id="be-3"></span> Entry 3</button></li>
        </ul>
    </div>  
    <footer>
        <p class="">&copy;
            <script>document.write(new Date().getFullYear())</script> theParkingSpot. All rights reserved.
        </p>
    </footer>
</div>

<script>
    $(function () {
        var btnEntry = $('.btn-entry button');
        btnEntry.on('click', function () {
            var id = $(this).attr('data-id');

            btnEntry.removeClass('active shadow text-light').attr('aria-pressed', 'false');
            $('span').html('');
            $(this).addClass('active shadow text-light').attr('aria-pressed', 'true');
            $('#be-'+id).html(spinner);
        });
    })
</script>